<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
	                    http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">

    <portlet>
        <portlet-name>news</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/news.xml</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>My news</title>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>maxStories</name>
                <value>10</value>
            </preference>
            <preference>
                <name>storyView</name>
                <value>select</value>
            </preference>
            <preference>
                <name>newWindow</name>
                <value>false</value>
            </preference>
            <preference>
                <name>feedView</name>
                <value>summaries</value>
            </preference>
            <preference>
                <name>usePortalJsLibs</name>
                <value>false</value>
            </preference>
            <preference>
                <name>portalJsNamespace</name>
                <value>up</value>
            </preference>
         <!-- The connection is attempted 5 times prior to stopping
              so the actual time before failure will be 5 times this setting.
              Suggested way of testing Connection Timeout is by hitting a
              domain with a port that is firewalled:
              ie. http://www.google.com:81 -->
            <preference>
              <name>httpClientConnectionTimeout</name>
              <value>10000</value>
            </preference>
         <!-- Suggested way of testing Socket Timeout is by using a tool locally to connect
              but not respond.  Example tool: bane
              http://blog.danielwellman.com/2010/09/introducing-bane-a-test-harness-for-server-connections.html
              usage: $bane 10010 NeverRespond
              ie http://localhost:10010 -->
            <preference>
              <name>httpClientSocketTimeout</name>
              <value>10000</value>
            </preference>
        </portlet-preferences>
        <security-role-ref>
            <role-name>everyone</role-name>
            <role-link>Everyone</role-link>
        </security-role-ref>
        <security-role-ref>
            <role-name>newsAdmin</role-name>
            <role-link>Portal Administrators</role-link>
        </security-role-ref>
        <security-role-ref>
            <role-name>student</role-name>
            <role-link>Students</role-link>
        </security-role-ref>
        <security-role-ref>
            <role-name>staff</role-name>
            <role-link>Staff</role-link>
        </security-role-ref>
    </portlet>

    <portlet>
        <portlet-name>single-feed-news</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/single-feed.xml</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
           <portlet-mode>edit</portlet-mode>
         </supports>
        <portlet-info>
            <title>RSS Feed</title>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>summaryView</name>
                <value>titleAndAbstract</value>
            </preference>
            <preference>
                <name>maxStories</name>
                <value>10</value>
            </preference>
            <preference>
                <name>newWindow</name>
                <value>false</value>
            </preference>
            <preference>
                <name>showTitle</name>
                <value>true</value>
            </preference>
            <preference>
                <name>className</name>
                <value>org.jasig.portlet.newsreader.adapter.RomeAdapter</value>
            </preference>
            <preference>
                <name>usePortalJsLibs</name>
                <value>false</value>
            </preference>
            <preference>
                <name>portalJsNamespace</name>
                <value>up</value>
            </preference>
            <!-- The following two timeout preferences apply only to the RomeAdapter.
                 If another adapter is specified the HttpClient within it would
                 need to be implemented similar to the RomeAdapters for these to
                 be leveraged -->
            <!-- The connection is attempted 5 times prior to stopping
                 so the actual time before failure will be 5 times this setting.
                 Suggested way of testing Connection Timeout is by hitting a
                 domain with a port that is firewalled:
                 ie. http://www.google.com:81 -->
            <preference>
              <name>httpClientConnectionTimeout</name>
              <value>10000</value>
            </preference>
            <!-- Suggested way of testing Socket Timeout is by using a tool locally to connect
                 but not respond.  Example tool: bane
                 http://blog.danielwellman.com/2010/09/introducing-bane-a-test-harness-for-server-connections.html
                 usage: $bane 10010 NeverRespond
                 ie http://localhost:10010 -->
            <preference>
              <name>httpClientSocketTimeout</name>
              <value>10000</value>
            </preference>
        </portlet-preferences>
    </portlet>
    
    <user-attribute>
        <name>username</name>
    </user-attribute>
    <user-attribute>
        <name>password</name>
    </user-attribute>
    <user-attribute>
        <name>user.name</name>
    </user-attribute>
    <user-attribute>
        <name>user.name.full</name>
    </user-attribute>
    <user-attribute>
        <name>contentGroup</name>
    </user-attribute>

</portlet-app>
